@model Project.Models.Product
<style>
    img {
        width: 150px;
        height: 150px;
    }
</style>
<h2>Delete</h2>

<p>Are you sure you want to delete this product?</p>


<form asp-action="Delete" method="post" asp-route-id="@Model.ProductID">
    <div>
        <h4>Product Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">Product Name:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductName)</dd>
            <dt class="col-sm-2">Price:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Price)</dd>
            <dt class="col-sm-2">Quantity:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.Quantity)</dd>
            <dt class="col-sm-2">Product Code:</dt>
            <dd class="col-sm-10">@Html.DisplayFor(model => model.ProductCode)</dd>
            <dt class="col-sm-2">Product Image:</dt>
            <dd class="col-sm-10">
                <img src="@Url.Content("~/img/" + Model.ProductImg)" alt="Product Image" />
            </dd>
            <dt class="col-sm-2">Warehouse:</dt>
            <dd class="col-sm-10">
                @if (Model.Warehouse != null)
                {
                    @Html.DisplayFor(model => model.Warehouse.WarehouseName)
                }
                else
                {
                    <span class="no-warehouse">No warehouse assigned</span>
                }
            </dd>
            <dt class="col-sm-2">Address:</dt>
            <dd class="col-sm-10">
                @if (Model.Warehouse != null)
                {
                    @Html.DisplayFor(model => model.Warehouse.Address)
                }
                else
                {
                    <span class="no-warehouse">No warehouse assigned</span>
                }
            </dd>
            <dt class="col-sm-2">Category:</dt>
            <dd class="col-sm-10">
                @if (Model.Category != null)
                {
                    @Html.DisplayFor(model => model.Category.Name)
                }
                else
                {
                    <span class="no-category">No category assigned</span>
                }
            </dd>
        </dl>
    </div>

    <div class="form-group">
        <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>
