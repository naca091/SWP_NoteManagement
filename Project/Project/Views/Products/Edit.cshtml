@model Project.Models.Product
<style>
    img {
        width: 150px;
        height: 150px;
    }
</style>
<link href="@Url.Content("~/css/Product.css")" rel="stylesheet">

<div class="container">
    <div class="text">
        Edit
    </div>
    <form asp-action="Edit" class="custom-form" method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="ProductID" />

        <div class="form-row">
            <div class="input-data">
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
                <div class="underline"></div>
            </div>
            <div class="input-data">
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
                <div class="underline"></div>
            </div>
        </div>
        <div class="form-row">
            <div class="input-data">
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
                <div class="underline"></div>
            </div>
            <div class="input-data">
                <input asp-for="ProductCode" class="form-control" />
                <span asp-validation-for="ProductCode" class="text-danger"></span>
                <div class="underline"></div>
            </div>
        </div>
        <div class="form-row">
            <div class="input-data">
                <!-- Dropdown for selecting Warehouse -->
                <select asp-for="WarehouseId" asp-items="@(ViewBag.Warehouses)" class="form-control">
                    <option value="">Select Warehouse</option>
                </select>
                <span asp-validation-for="WarehouseId" class="text-danger"></span>
                <div class="underline"></div>
            </div>
            <div class="input-data">
                <!-- Dropdown for selecting Category -->
                <select asp-for="CategoryId" asp-items="@(ViewBag.Categories)" class="form-control">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
                <div class="underline"></div>
            </div>
        </div>
        <div class="input-data">
            <label for="imageFile"></label>
            <input type="file" name="file" id="imageFile" class="form-control-file" onchange="previewImage(this)" />
            <img id="imagePreview" src="@(Model.ProductImg != null ? Url.Content("~/img/" + Model.ProductImg) : "#")" alt="Preview" style="@(Model.ProductImg != null ? "display: block;" : "display: none;") max-width: 200px; max-height: 200px;" />
        </div>
        <div class="form-row">
            <div class="submit-btn">
                <div class="input-data">
                    <div class="inner"></div>
                    <input type="submit" value="Edit" class="btn btn-primary">
                </div>
            </div>
            <div class="back-btn">
                <div class="submit-btn">
                    <div class="input-data">
                        <div class="inner"></div>
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>


    </form>
</div>

