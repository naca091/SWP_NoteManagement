@model Project.Models.Note

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Note</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NoteCode)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NoteCode)
        </dd>

        <!-- Thêm các thuộc tính khác của Note -->

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Status)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
    </dl>
    <form asp-action="Delete" asp-route-id="@Model.NoteId" method="post">
        <div>
            @if (Model.Status != 4)
            {
                <input type="submit" value="Delete" class="btn btn-danger" />
            }
            else
            {
                <p>Note with status 4 cannot be deleted.</p>
            }
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>

<script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
