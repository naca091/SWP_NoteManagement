@model Project.Models.Customer
<link href="@Url.Content("~/css/Details.css")" rel="stylesheet">
<style>
    .text {
        font-size: 41px;
        font-weight: 600;
        text-align: center;
        background: -webkit-linear-gradient(right, #56d8e4, #9f01ea, #56d8e4, #9f01ea);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 20px;
    }

    /* Style cho nhãn của dòng */
    .row dt {
        width: 50%;
        font-weight: bold;
        text-align: left;
    }

    /* Style cho nội dung của dòng */
    1 .row dd {
        width: 50%;
    }
</style>
<div class="text">Details</div>

<div class="container">
    <div>
        <h4 class="text">@Model.Name</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Address)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Address)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Phone)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Phone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Total)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Total) Point
            </dd>
            <div class="back-btn">
                <div class="submit-btn">
                    <div class="input-data">
                        <div class="inner"></div>
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            </div>
        </dl>
    </div>
</div>
