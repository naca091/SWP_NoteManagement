@model Project.Models.Category
<link href="@Url.Content("~/css/Product.css")" rel="stylesheet">

<div class="container">
    <div class="text">
        Create
    </div>

    <form asp-controller="Category" asp-action="Create" method="post" enctype="multipart/form-data" class="custom-form">
        <div class="input-data">
            <input asp-for="Name" class="form-control" placeholder="Category Name" />
            <div class="underline"></div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="input-data">
            <label for="imageFile"></label>
            <input type="file" name="file" id="imageFile" class="form-control-file" onchange="previewImage(this)" />
            <img id="imagePreview" src="#" alt="Preview" style="display: none; max-width: 200px; max-height: 200px;" />
        </div>
        <div class="form-group">
            <div class="submit-btn">
                <div class="input-data">
                    <div class="inner"></div>
                    <input type="submit" value="Create" class="btn btn-primary">
                </div>
            </div>
            <div class="back-btn">
                <div class="submit-btn">
                    <div class="input-data">
                        <div class="inner"></div>
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>
<script>
    function previewImage(input) {
        var imagePreview = document.getElementById('imagePreview');
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                imagePreview.src = e.target.result;
                imagePreview.style.display = 'block';
            }
            reader.readAsDataURL(input.files[0]);
        } else {
            imagePreview.style.display = 'none';
        }
    }
    document.addEventListener('DOMContentLoaded', function () {
        const createForm = document.querySelector('.custom-form');

        // Bắt sự kiện khi form được submit
        createForm.addEventListener('submit', function (event) {
            // Kiểm tra các trường nhập liệu
            const categoryNameInput = document.querySelector('input[name="Name"]');
            const imageFileInput = document.querySelector('input[name="file"]');
            const imagePreview = document.getElementById('imagePreview');

            // Kiểm tra tên danh mục và tệp hình ảnh
            if (categoryNameInput.value.trim() === '' || !imageFileInput.files || !imageFileInput.files[0]) {
                // Ngăn chặn việc gửi form nếu thiếu thông tin
                event.preventDefault();

                // Hiển thị thông báo yêu cầu nhập đủ thông tin
                if (categoryNameInput.value.trim() === '') {
                    document.querySelector('span[data-valmsg-for="Name"]').textContent = "Please enter category name.";
                } else {
                    document.querySelector('span[data-valmsg-for="Name"]').textContent = "";
                }
                if (!imageFileInput.files || !imageFileInput.files[0]) {
                    alert("Please select an image.");
                }
            }
        });
    });

</script>
